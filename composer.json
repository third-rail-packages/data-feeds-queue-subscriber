{
    "name": "trainjunkies-packages/data-feeds-queue-subscriber",
    "description": "Subscribe to Network Rail & National Rail data feed queues",
    "type": "library",
    "license": "proprietary",
    "require": {
        "enqueue/stomp": "^0.8.27"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.4",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-0": {
            "TrainjunkiesPackages\\": "src/"
        }
    },
    "config": {
         "bin-dir": "bin"
    },
    "scripts": {
        "sniff": "bin/phpcs -s --standard=PSR2 src/",
        "beauty": "bin/phpcbf --standard=PSR2 src/",
        "spec": "bin/phpspec run --format=pretty --no-code-generation --stop-on-failure",
        "ci": [
            "@sniff",
            "@spec"
        ]
    }
}
